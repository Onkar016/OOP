#include<iostream>
using namespace std;

template<typename t>
void selection(t array[],int n)
{
    int min ;

    for (int i =0 ; i<n ;i++)
    {
        min = i;
        for(int j=i+1; j<n;j++)
        {
            if(array[j]<array[min])
            {
                min =j;
            }

        }
        t temp = array[i];
        array[i]=array[min];
        array[min]=temp;

    }

    cout<<"after sorting"<<endl;
    for(int i =0 ;i<n;i++)
    {
        cout<<array[i]<<" ";
    }
    cout<<endl;
}


int main()
{
    int n ;
    cout<<"enter size"<<endl;
    cin>>n;
    int A[n];
    float B[n];
    cout<<"enter inteers"<<endl;
    for(int i =0; i<n; i++)
    {
        cin>>A[i];
    }
    cout<<"enter float"<<endl;
     for(int i =0; i<n; i++)
    {
        cin>>B[i];
    }
    cout<<"int is "<<endl;
     for(int i =0; i<n; i++)
    {
        cout<<A[i]<<" ";
    }
    cout<<"float is "<<endl;
    cout<<endl;
     for(int i =0; i<n; i++)
    {
        cout<<B[i]<<" ";
    }
    cout<<endl;
    selection( A,n);
    selection(B,n);

}
